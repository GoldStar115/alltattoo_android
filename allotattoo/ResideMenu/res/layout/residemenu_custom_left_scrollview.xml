<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/sv_left_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="93dp"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/layout_left_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:id="@+id/img_menu_photo"

                android:layout_marginTop="40dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_launcher"/>
            <RelativeLayout
                android:id="@+id/menu_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:text="Style"
                    android:textColor="@color/text_black_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menu_ins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:text="Inspiration"
                    android:textColor="@color/text_black_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menu_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:text="Mon compte"
                    android:textColor="@color/text_black_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menu_favoris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:text="Mes favoris"
                    android:textColor="@color/text_black_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menu_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtmenucategory"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:text="Notifications"
                    android:textColor="@color/text_black_color"/>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="-15dp"
                    android:layout_alignRight="@id/txtmenucategory"
                    android:layout_width="18dp"
                    android:layout_height="18dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/menu_notibadge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/turquoise_blue"/>
                    <TextView
                        android:id="@+id/txtmenu_notibadge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menu_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtmenumessage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:text="Messages"
                    android:textColor="@color/text_black_color"/>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="-15dp"
                    android:layout_alignRight="@id/txtmenumessage"
                    android:layout_width="18dp"
                    android:layout_height="18dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/menu_messagebadge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/turquoise_blue"/>
                    <TextView
                        android:id="@+id/txtmenu_messbadge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menu_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:text="A propos"
                    android:textColor="@color/text_black_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menu_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:text="Se dÃ©connecter"
                    android:textColor="@color/text_black_color"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>