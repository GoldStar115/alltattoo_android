<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_profile_backphoto"
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:background="@drawable/tattooistprofileback"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:background="@color/text_black_color"
        android:alpha="0.69"/>
    <RelativeLayout
        android:id="@+id/btn_menu_tattooistprofile"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="20dp"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@color/clearcolor">
        <ImageView
            android:id="@+id/img_menu_tattooistprofile"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btnmenu"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_toRightOf="@id/img_menu_tattooistprofile"
            android:layout_centerVertical="true"
            android:id="@+id/img_tattooistprofile_badge"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:src="@color/turquoise_blue"
            android:visibility="visible"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn_menu_tattooistsetting"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_marginRight="20dp"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@color/clearcolor">
        <ImageView
            android:id="@+id/img_setting_tattooistprofile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/profilesetting"/>
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_tattooist_profilphoto"
        android:layout_marginTop="58dp"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/no_photo"/>
    <TextView
        android:id="@+id/txt_tattooistprofil_name"
        android:layout_below="@id/img_tattooist_profilphoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tatoueur : James Harrison"
        android:textColor="@color/colorwhite"
        android:textSize="26sp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_tattooistprofil_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:background="@drawable/location"/>
        <TextView
            android:id="@+id/txt_tattooistprofil_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locations"
            android:textSize="16sp"
            android:textColor="@color/border_color"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignBottom="@id/img_profile_backphoto"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="60dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.333333333"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tattooist_profil_postnumber"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="20sp"
                android:textColor="@color/border_color"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@id/tattooist_profil_postnumber"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profilepostdes"
                android:textSize="17sp"
                android:textColor="@color/border_color"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/border_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.3333333333"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tattooist_profil_followcnt"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="20sp"
                android:textColor="@color/border_color"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@id/tattooist_profil_followcnt"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profilefollowdes"
                android:textSize="17sp"
                android:textColor="@color/border_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"

            android:layout_width="0dp"
            android:layout_weight="0.333333333"
            android:layout_height="match_parent">
            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/border_color"/>
            <TextView
                android:id="@+id/tattooist_profil_commnetcnt"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="20sp"
                android:textColor="@color/border_color"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@id/tattooist_profil_commnetcnt"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profilecommentdes"
                android:textSize="17sp"
                android:textColor="@color/border_color"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>