<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_otheruserprofile_backphoto"
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:background="@drawable/no_photo"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:background="@color/text_black_color"
        android:alpha="0.69"/>
    <RelativeLayout
        android:id="@+id/btn_otheruser_back"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="20dp"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@color/clearcolor">
        <ImageView
            android:id="@+id/img_menu_profile"
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back"/>
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_otheruser_profilphoto"
        android:layout_marginTop="58dp"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/no_photo"/>
    <TextView
        android:id="@+id/txt_otheruserprofil_name"
        android:layout_below="@id/img_otheruser_profilphoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nicolas Stouls"
        android:textColor="@color/colorwhite"
        android:textSize="26sp"/>
    <RelativeLayout

        android:layout_below="@id/img_otheruser_profilphoto"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/otheruser_message"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/message"/>
        <ImageView
            android:id="@+id/otheruser_follow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/follow"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_otheruserprofil_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:background="@drawable/location"/>
        <TextView
            android:id="@+id/txt_otheruserprofil_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locations"
            android:textSize="16sp"
            android:textColor="@color/border_color"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignBottom="@id/img_otheruserprofile_backphoto"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="60dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.333333333"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/otheruser_profil_postnumber"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="20sp"
                android:textColor="@color/border_color"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@id/otheruser_profil_postnumber"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profilepostdes"
                android:textSize="17sp"
                android:textColor="@color/border_color"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/border_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.3333333333"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/otheruser_profil_followcnt"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="20sp"
                android:textColor="@color/border_color"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@id/otheruser_profil_followcnt"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profilefollowdes"
                android:textSize="17sp"
                android:textColor="@color/border_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"

            android:layout_width="0dp"
            android:layout_weight="0.333333333"
            android:layout_height="match_parent">
            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/border_color"/>
            <TextView
                android:id="@+id/otheruser_profil_commnetcnt"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="20sp"
                android:textColor="@color/border_color"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@id/otheruser_profil_commnetcnt"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profilecommentdes"
                android:textSize="17sp"
                android:textColor="@color/border_color"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>