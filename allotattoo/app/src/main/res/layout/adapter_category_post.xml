<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="219dp">

    <TextView
        android:id="@+id/txtcategorypost"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/text_black_color"
        android:textSize="20sp"
        android:text="Quand on aime, on partage \n ! N’oubliez pas d’inviter vos amis"/>
    <ImageView
        android:id="@+id/imgmarketpost"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/txtcategorypost"
        android:layout_marginBottom="16dp"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:src="@drawable/imgmarketcamera"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/btnmarketpost"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txtcategorypost"
        android:layout_centerHorizontal="true"
        android:layout_width="198dp"
        android:layout_height="50dp"
        android:src="@drawable/btnmarketpost"
        android:scaleType="fitXY"/>
</RelativeLayout>