<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/toolbar_photofeed"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/toolbarcolor">
        <RelativeLayout
            android:id="@+id/btn_menu"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:background="@color/clearcolor">
            <ImageView                
                android:id="@+id/img_menu"
                android:layout_width="20dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:background="@drawable/btnmenu"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_toRightOf="@id/img_menu"
                android:layout_centerVertical="true"
                android:id="@+id/img_badge"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@color/turquoise_blue"
                android:visibility="gone"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="89dp"
                android:layout_height="17dp"
                android:background="@drawable/imglogo"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_like"
            android:layout_marginTop="40dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/btnlike"
            ></RelativeLayout>
        <RelativeLayout
            android:id="@+id/btnsearch"
            android:layout_marginTop="40dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@id/btn_like"
            android:background="@drawable/btnsearch"
            android:layout_marginRight="37dp"
            ></RelativeLayout>

    </RelativeLayout>
    <com.astuetz.PagerSlidingTabStrip

        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/toolbar_photofeed"
        app:pstsIndicatorColor="@color/turquoise_blue"
        app:pstsIndicatorHeight="2sp"
        app:pstsTabBackground="@color/tabhostcolor"
        app:pstsTabTextSize="14sp"
        app:pstsTabTextStyle="normal"
        app:pstsShouldExpand="true"
        app:pstsTabTextColor="@drawable/tabhost_colorstatelist"
        android:background="@color/tabhostcolor"/>
    <android.support.v4.view.ViewPager
        android:layout_below="@id/tabhost"
        android:id="@+id/photofeed_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"/>
</RelativeLayout>