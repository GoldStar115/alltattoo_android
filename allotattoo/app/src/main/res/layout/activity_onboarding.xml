<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >
    <ImageView
        android:background="@drawable/imglogo"
        android:layout_marginTop="44dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="89dp"
        android:layout_height="18dp" />
    <LinearLayout
        android:id="@+id/view_pager_layout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="245dp"
        android:layout_height="135dp">
        <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        android:layout_below="@id/view_pager_layout"
        android:layout_width="42dp"
        android:layout_height="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/board_dot0"
            android:layout_width="8dp"
            android:layout_height="8dp" />.
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/board_dot1"
            android:layout_centerHorizontal="true"
            android:layout_width="8dp"
            android:layout_height="8dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/board_dot2"
            android:layout_alignParentRight="true"
            android:layout_width="8dp"
            android:layout_height="8dp" />

    </RelativeLayout>
    <Button
        android:id="@+id/commencer"
        android:background="@drawable/commencer_press"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_width="251dp"
        android:layout_height="65dp"/>

</RelativeLayout>